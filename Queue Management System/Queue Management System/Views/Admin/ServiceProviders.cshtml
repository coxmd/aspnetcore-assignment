@model List<ServiceProvider>

<partial name="_Notification" />

<h2>Service Providers</h2>

@{
    Layout = "_LayoutAdminLoggedIn";
}

<table class="table">
    <thead>
        <tr>
            <th scope="row">Id</th>
            <th scope="row">Name</th>
            <th scope="row">ServicePointId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var serviceProvider in Model)
        {
            <tr class="table-dark">
                <td width="20%">@serviceProvider.Id</td>
                <td width="20%">@serviceProvider.Name</td>
                <td width="20%">@serviceProvider.ServicePointId</td>
                <td width="30%">
                    <a class="btn btn-primary mx-1" href="@Url.Action("EditServiceProvider", new { id = serviceProvider.Id })" >Edit</a> |
                    <a class="btn btn-danger" href="@Url.Action("DeleteServiceProvider", new { id = serviceProvider.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-primary">
    <a style="color: white; text-decoration: none;" href="@Url.Action("AddServiceProvider")">Add Service Provider</a>
</button>
