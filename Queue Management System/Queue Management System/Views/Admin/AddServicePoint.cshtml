@model ServicePoint

<h2 class="mt-5">Add Service Point</h2>

<form asp-action="AddServicePoint" method="post" class="mt-5">
    <div class="form-group">
        <div class="col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-primary mx-1" value="Add" />
        <a asp-action="ServicePoints" class="btn btn-danger mx-1">Back</a>
    </div>
    </div>

    
</form>
