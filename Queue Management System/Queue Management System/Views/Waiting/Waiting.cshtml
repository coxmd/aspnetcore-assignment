@model IEnumerable<CustomerTicket>

<h2>Waiting Customers Currently On the Queue</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col" style="color: black;">Ticket Number</th>
            <th scope="col" style="color: black;">Destination</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customerTicket in Model)
        {
            <tr class="table-light">
                <th style="color: black;" scope="row">@customerTicket.Id</th>
                <td style="color: black;">Room: @customerTicket.ServicePointId</td>
            </tr>
        }
    </tbody>
</table>
